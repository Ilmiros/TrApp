@model MvcApplication9.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<hgroup class="title">
</hgroup>

<section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <table id="loginTable">
            <tr>
                <td>@Html.LabelFor(m => m.Login)</td>
                <td>@Html.TextBoxFor(m => m.Login)</td>
                <td>@Html.ValidationMessageFor(m => m.Login)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Password)</td>
                <td>@Html.PasswordFor(m => m.Password)</td>
                <td>@Html.ValidationMessageFor(m => m.Password)</td>
            </tr>
            <tr>
                <td>@Html.CheckBoxFor(m => m.RememberMe)</td>
                <td>@Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })</td>
            </tr>
            <tr><td><input type="submit" value="вход" /></td>
            <tr><td>@Html.ActionLink("регистрация", "Register")</td>
            </tr>
        </table>
    }
</section>

